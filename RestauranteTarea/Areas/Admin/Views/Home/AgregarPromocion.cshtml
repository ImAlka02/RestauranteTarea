@model RestauranteTarea.Areas.Admin.Models.AddPromoAdminViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AgregarPromocion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method="post" action="~/Admin/Home/AgregarPromocion">
    <h1>Agregar un descuento de promoción</h1>
    <input type="hidden" asp-for="Id" />
    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" required asp-for="Nombre">
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input type="text" id="precio" required asp-for="Precio">
    </span>
    <span>
        <label for="promocion">Precio promoción:</label>
        <input type="text" id="promocion" required asp-for="PrecioPromo">
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Agregar" />
        <a href="~/Admin/Home/Menu">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>
